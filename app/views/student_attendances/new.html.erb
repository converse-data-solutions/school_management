<div class="container bg-[#F5F5F5] mx-auto md:mt-[35px] text-[15px] lg:mt-0 mb-8 p-1 text-[#39A9E8] pl-4"><span>Home</span><span class="mx-2 text-[#aba7a7]">/</span><span>Teacher Attendance</span></div>
<div class=" container mx-auto rounded-[5px] border-2 relative">
  <div class=" px-5 bg-[#EDEDED] flex items-center justify-between text-[#317EAC] shadow-2xl">
    <div><i class="fa-solid fa-pen-to-square"></i>
      <span class="font-semibold">Student Attendance</span></div>
    <button class="accordian-header cursor-pointer leading-0 px-1 text-2xl  border bg-white text-black font-extrabold rounded-3xl"> <i class="bx bx-chevron-up  "></i></button>
  </div>
  <div class="accordian-body bg-[#ffffff] ">
    <div class="p-3 ">
      <div class="w-full container hidden  text-red-700 mx-auto conatiner mb-3  text-[14px] p-4 rounded bg-[#F2DEDE] " id="error-div">
        <ul>
          <li class="error" id="date-error"></li>
        </ul>
      </div>
      <div class='p-3 w-full'>
        <%= form_tag student_attendances_path, method: :get do  %>
          <div class= 'flex flex-col md:flex-row gap-2 md:items-center w-full gap-x-6'>
            <div class="w-full md:w-[25%]">
              <%= label_tag :date, "Date" , class: 'text-[15px] text-[#555555] font-semibold' %>
              <%= date_field_tag :date, params[:date],  class: " border border-gray-300 bg-[#EEEEEE] text-gray-900 text-sm rounded-[5px] focus:ring-[#37A7E7] focus:border-[#37A7E7] block w-full p-2.0", id: 'date' %>
            </div>
            <div class="w-full md:w-[25%]">
              <%= label_tag :standard, "Standard", class: 'text-[15px] text-[#555555] font-semibold' %>
              <%= select_tag :standard_id, options_from_collection_for_select(Standard.all, 'id', 'name', params[:standard_id]), class: "border border-gray-300 bg-[#EEEEEE] text-gray-900 text-sm rounded-[5px] focus:ring-[#37A7E7] focus:border-[#37A7E7] block w-full p-2.0 standard" %>
            </div>
            <div class="w-full md:w-[25%]" id="section-dropdown">
              <%= label_tag :standard, "Section", class: 'text-[15px] text-[#555555] font-semibold' %>
              <%= select_tag :section_id, options_from_collection_for_select( Section.where(standard_id: params[:standard_id]), 'id', 'section_name', params[:section_id]), class: "border border-gray-300 bg-[#EEEEEE] text-gray-900 text-sm rounded-[5px] focus:ring-[#37A7E7] focus:border-[#37A7E7] block w-full p-2.0 " %>
            </div>
            <div>
              <%= submit_tag "View" ,class:'text-white bg-[#81B944]    focus:ring-2 hover:ring-[#000] focus:outline-[#000] focus:ring-[#000] font-semibold rounded-[5px] text-sm  w-auto sm:w-auto px-4  py-2 text-center'%>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<script>
  $(document).ready(function() {

   $(document).on("change", "#standard_id", function () {
    var standard_id = $(this).val();
    console.log(standard_id);
    $.ajax({
      url: "/student_attendances/get_sections",
      type: "GET",
      data: { standard_id: standard_id },
    });
  });

  });
</script>
