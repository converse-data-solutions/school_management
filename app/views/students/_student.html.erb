<div id="<%= dom_id student %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Admission no:</strong>
    <%= student.admission_no %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Roll no:</strong>
    <%= student.roll_no %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= student.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Father name:</strong>
    <%= student.father_name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Mother name:</strong>
    <%= student.mother_name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Mobile number:</strong>
    <%= student.mobile_number %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Address:</strong>
    <%= student.address %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Date of birth:</strong>
    <%= student.date_of_birth %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Gender:</strong>
    <%= student.gender %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Date of admission:</strong>
    <%= student.date_of_admission %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Section:</strong>
    <%= student.section_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">User:</strong>
    <%= student.user_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this student", student, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this student", edit_student_path(student), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
