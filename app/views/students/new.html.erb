  <%= content_for :head do %>
  <%= javascript_import_module_tag "controllers/studentNew" %>
<% end %>
<div class="container bg-[#F5F5F5] mx-auto md:mt-[35px] text-[15px] lg:mt-0 mb-8 p-1 text-[#39A9E8] pl-4"><span><%= link_to "Home", root_path %></span><span class="mx-2 text-[#aba7a7]">/</span><span>Add New Student</span></div>
<div class=" container mx-auto rounded-[5px] border-2">
  <div class=" px-5 bg-[#EDEDED] flex items-center justify-between text-[#317EAC] shadow-2xl">
    <div><i class="fa-solid fa-pen-to-square"></i>
      <span class="font-semibold">Add Student</span></div>
    <button class="accordian-header cursor-pointer leading-0 px-1 text-2xl  border bg-white text-black font-extrabold rounded-3xl"> <i class="bx bx-chevron-up  "></i></button>
  </div>
  <div class="accordian-body">
    <%= form_with(model: @student, data: { controller: "flatpickr" }, class: "contents") do |f| %>
      <div class="p-5 border-t bg-white flex flex-wrap" >
        <% if @student.errors.any? %>
          <div class="w-full  text-red-700 mx-auto container mb-3 text-[14px] px-10 py-5 rounded bg-[#F2DEDE]">
            <ul>
              <li>
                <% if @student.errors.has_key?(:admission_no) %>
                  <%= @student.errors[:admission_no].first %>
                <% end %>
              </li>
              <li>
                <% if @student.errors.has_key?(:section_id) %>
                  <%= @student.errors[:section_id].first %>
                <% end %>
              </li>
              <li>
                <% if @student.errors.has_key?(:user_id) %>
                  <%= @student.errors[:user_id].first %>
                <% end %>
              </li>
              <li>
                <% if @student.errors.has_key?(:date_of_birth) %>
                  <%= @student.errors[:date_of_birth].first %>
                <% end %>
              </li>
              <li>
                <% if @student.errors.has_key?(:mobile_number) %>
                  <%= @student.errors[:mobile_number].first %>
                <% end %>
              </li>
            </ul>
          </div>
        <% end %>
        <div class="w-full md:w-[75%]">
          <div class="flex   flex-wrap md:gap-3 lg:gap-4">
            <div class="w-full  md:w-[48.5%]">
              <label for="name" class="block mb-2 text-sm font-semibold text-[#393E46] ">Admission No.</label>
              <%= f.text_field :admission_no, id:"admission_no" ,class: " border border-gray-300 text-gray-900 text-sm rounded-[5px] focus:ring-[#37A7E7] focus:border-[#37A7E7] block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400  dark:focus:ring-[#37A7E7] dark:focus:border-[#37A7E7]" ,placeholder:"Name"%>
            </div>
            <div class="w-full  md:w-[48.5%]">
              <label for="name" class="block mb-2 text-sm font-semibold text-[#393E46] ">Name</label>
              <%= f.text_field :name, id:"name" ,class: " border border-gray-300 text-gray-900 text-sm rounded-[5px] focus:ring-[#37A7E7] focus:border-[#37A7E7] block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400  dark:focus:ring-[#37A7E7] dark:focus:border-[#37A7E7]" ,placeholder:"Name"%>
            </div>
            <div class="w-full  md:w-[48.5%]">
              <label for="name" class="block mb-2 text-sm font-semibold text-[#393E46] ">Father Name</label>
              <%= f.text_field :father_name, id:"father_name" ,class: " border border-gray-300 text-gray-900 text-sm rounded-[5px] focus:ring-[#37A7E7] focus:border-[#37A7E7] block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400  dark:focus:ring-[#37A7E7] dark:focus:border-[#37A7E7]" ,placeholder:"Father Name"%>
            </div>
            <div class="w-full  md:w-[48.5%]">
              <label for="name" class="block mb-2 text-sm font-semibold text-[#393E46] ">Mother Name</label>
              <%= f.text_field :mother_name, id:"fmother_name" ,class: " border border-gray-300 text-gray-900 text-sm rounded-[5px] focus:ring-[#37A7E7] focus:border-[#37A7E7] block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400  dark:focus:ring-[#37A7E7] dark:focus:border-[#37A7E7]" ,placeholder:"Mother Name"%>
            </div>
            <div class="w-full  md:w-[48.5%]">
              <label for="address" class="block mb-2 text-sm font-semibold text-[#393E46] ">Address</label>
              <%= f.text_field :address, id: "address", class: " border border-gray-300 text-gray-900 text-sm rounded-[5px] focus:ring-[#37A7E7] focus:border-[#37A7E7] block w-full p-2.5", placeholder: "address" %>
            </div>
            <div class="w-full  md:w-[48.5%] lg:w-[23.5%]">
              <label for="date_of_birth" class="block mb-2 text-sm font-semibold text-[#393E46] ">Date of birth</label>
              <%= f.date_field :date_of_birth, id: "date_of_birth", class: " border border-gray-300 text-gray-900 text-sm rounded-[5px] focus:ring-[#37A7E7] focus:border-[#37A7E7] block w-full p-2.5", placeholder: "Date of birth" %>
            </div>
            <div class="w-full  md:w-[48.5%] lg:w-[23.5%]">
              <label for="mobile-number" class="block mb-2 text-sm font-semibold text-[#393E46] ">Mobile</label>
              <%= f.text_field :mobile_number, id: "mobile-number", class: " border border-gray-300 text-gray-900 text-sm rounded-[5px] focus:ring-[#37A7E7] focus:border-[#37A7E7] block w-full p-2.5", placeholder: "Mobie Number" %>
            </div>
            <div class="w-full md:w-[48.5%] lg:w-[23.5%]">
              <label for="standard" class="block mb-2 text-sm font-semibold text-[#393E46] ">Standard</label>
              <%= f.collection_select(:standard_id, Standard.all, :id, :name, { prompt: 'Select Standard' }, { class: 'text-[14px] focus:ring-[#37A7E7] standard'} ) %>
            </div>
            <div class="w-full  md:w-[48.5%] lg:w-[23.5%]",  id="section-dropdown">
              <label for="section" class="block mb-2 text-sm font-semibold text-[#393E46] ">Section</label>
              <%= f.collection_select(:section_id, [], :id, :section_name, { prompt: 'Select Section' }, { class: 'text-[14px] focus:ring-[#37A7E7]' }) %>
            </div>
            <div class="w-full  md:w-[48.5%] lg:w-[23.5%]">
              <label for="date_of_admisiion" class="block mb-2 text-sm font-semibold text-[#393E46] ">Date of admission</label>
              <%= f.date_field :date_of_admission, id: "date_of_admission" , class: " border border-gray-300 text-gray-900 text-sm rounded-[5px] focus:ring-[#37A7E7] focus:border-[#37A7E7] block w-full p-2.5", placeholder: "Date of admission" %>
            </div>
            <div class="w-full  md:w-[48.5%] lg:w-[23.5%]">
              <label for="roll_no" class="block mb-2 text-sm font-semibold text-[#393E46] ">Roll No</label>
              <%= f.text_field :roll_no, id: "mobile-number", class: " border border-gray-300 text-gray-900 text-sm rounded-[5px] focus:ring-[#37A7E7] focus:border-[#37A7E7] block w-full p-2.5", placeholder: "Roll No" %>
            </div>
            <div class="w-full md:w-[48.5%] lg:w-[23.5%]">
              <label for="parent" class="block mb-2 text-sm font-semibold text-[#393E46] ">Select parent</label>
              <%= f.collection_select :user_id, User.where(role: "parent"), :id, :name,{ prompt: "Select Parent" }, { class: 'text-[14px] focus:ring-[#37A7E7] SelExample'} %>
            </div>
            <div class="w-full  md:w-[48.5%] lg:w-[23.5%]">
              <label for="gender" class="block mb-2 text-sm font-semibold text-[#393E46] ">Gender</label>
              <div class="flex" id="gender-radio-group">
                <div class="flex items-center mr-4">
                  <%= f.radio_button :gender, 'male', class:"w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 focus:ring-[#37A7E7]" %>
                  <label for="inline-radio" class="ml-2 text-sm font-semibold text-gray-900 dark:text-gray-300">Male</label>
                </div>
                <div class="flex items-center mr-4">
                  <%= f.radio_button :gender, 'female', class:"w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 focus:ring-[#37A7E7]" %>
                  <label for="inline-2-radio" class="ml-2 text-sm font-semibold text-gray-900 dark:text-gray-300">Female</label>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="w-full md:w-[25%] pl-4">
          <div id="previewSingle" class="mt-2"></div>
          <div id="defaultUpload">
            <div class="w-[130px] h-[130px]"><img src="<%= asset_path('user.png') %>" alt="Image Description"  ></div>
          </div>
          <div class="file-input-wrapper mt-3">
            <label class=" px-9 py-3 bg-white  text-Black border-2 rounded-lg">
              <span class=" text-base leading-normal">Browse</span>
              <%= f.file_field :image, class: "hidden", id: "single_file", accept: "image/*" %>
            </label>
          </div>
        </div>
      </div>
      <%= f.submit "Add Student",class:"text-white bg-[#39A9E8] ml-4 ml-4  md:mb-4 md:ml-5 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-semibold rounded-[5px] text-sm  w-auto sm:w-auto px-5  py-2.5 text-center" %>
    </div>
  <% end %>
</div>
</div>
