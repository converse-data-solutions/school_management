<div class="w-full">
  <label for="section" class='text-[15px] text-[#555555] font-semibold'>Section</label>
  <select id="selected_section" name="[section_id]" class= "border border-[#cccccc]  text-[#555555] text-sm rounded-[5px] focus:border-[#66afe9] focus:ring-blue-200 block w-full p-2.0 standard">
    <option value="">Select Section</option>
    <% sections.each do |section| %>
      <option value="<%= section.id %>"><%= section.section_name %></option>
    <% end %>
  </select>
</div>
