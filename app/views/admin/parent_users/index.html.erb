<div class="container bg-[#F5F5F5] mx-auto mb-8 p-1 text-[#39A9E8] pl-4"><span>Home</span><span class="mx-2 text-[#aba7a7]">/</span><span>Add New Parent</span></div>
<div class=" container mx-auto rounded-lg border-2">
  <div class="accordian-header px-5 bg-[#EDEDED] flex items-center justify-between text-[#317EAC] shadow-2xl">
    <div><i class="fa-solid fa-pen-to-square"></i>
      <span class="font-semibold">Manage Parent</span></div>
    <div class="cursor-pointer text-3xl"> <i class="bx bx-chevron-down"></i></div>
  </div>
  <div class="accordian-body">
    <div class="bg-[#FFFFFF] overflow-scroll mx-5">
      <table id="myTable" class="stripe" style="width:98%;" data-source="<%= admin_parent_users_path(format: :json) %>">
        <thead class="bg-[#FFFFFF]">
          <tr>
            <th class="parent_name">Name</th>
            <th class="parent_username">Username</th>
            <th class="parent_email">Email</th>
            <th class="parent_mobile">Mobile</th>
            <th class="parent_address">Address</th>
            <th class="parent_profession">profession</th>
            <th class="parent_gender">Gender</th>
            <th class="parent_status">Status</th>
            <th class="parent_action">Action</th>
          </tr>
        </thead>
        <tbody class="bg-[#F9F9F9] ">
        </tbody>
      </table>
    </div>
  </div>
</div>
<script>
  $(document).ready(function() {
    $('#myTable').dataTable({
      "processing": true,
      "serverSide": true,
      "ajax": {
        "url": $('#myTable').data('source')
      },
      "pagingType": "full_numbers",
      "language": {
                "sLengthMenu": "_MENU_ records per page", // Customize the "Show entries" text
            },
      "columns": [
        { title: "Name", "data": "name", class: "parent_name" },
        { "data": "username", class: "parent_username" },
        { "data": "email", class: "parent_email" },
        { "data": "mobile_number", class: "parent_mobile" },
        { "data": "address", class: "parent_address" },
        { "data": "profession", class: "parent_profession" },
        { "data": "gender", class: "parent_gender" },
        { "data": "deleted", class: "parent_status" },
        { "data": "dt_actions", class: "parent_action" },
      ]
    });
  });
</script>
