<header class="clearfix">
  <div id="logo">
    <%= image_tag wicked_pdf_asset_base64('aboutschool.png'), alt: 'logo', style: 'width: 90px; height: 86px;' %>
  </div>
  <h1>INVOICE</h1>
  <div id="school" class="clearfix">
    <div><strong><%= @school&.school_name %></strong></div>
    <div><%= @school&.school_address1 %><br/>
    </div>
    <div><strong><%= @school&.school_phone %></strong></div>
    <div><a href="/cdn-cgi/l/email-protection#d9bdb8aab8aaaab899b1adbeb1"><%= @school&.school_email %></a></div>
  </div>
  <div id="student">
    <div><span>Name</span><%= @payment.academic_fee.academic_detail.student.name %></div>
    <div><span>Standard</span><%= @payment.academic_fee.academic_detail.student.section.standard.name %></div>
    <div><span>Student No.</span><%= @payment.academic_fee.academic_detail.student.roll_no %></div>
    <div><span>Date</span><%= @payment.paid_at.strftime("%d/%m/%Y %I:%M %p") %></div>
    <div><span>Receipt No.</span><%= @payment.id %></div>
    <div><span>Aced Year.</span><%= @payment.academic_fee.academic_detail.academic_year %></div>
  </div>
</header>
<main>
  <table>
    <thead>
      <tr>
        <th class="serialNumber">S.No.</th>
        <th class="desc">Particulars</th>
        <th>Actual Amount</th>
        <th>Discount</th>
        <th>Payable Fee</th>
        <th>Paid Amount</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td class="serialNumber">1</td>
        <td class="desc">Academic Fees</td>
        <td class="actualAmount"><%= @payment.academic_fee.actual_fee %></td>
        <td class="discount"><%= @payment.academic_fee.discount %>%</td>
        <td class=""><%= @payment.academic_fee.payable_fee %></td>
        <td class="total"><%= @payment.paid_amount %></td>
      </tr>
      <tr>
        <td colspan="5" class="grand total">GRAND TOTAL</td>
        <td class="grand total"><%= @payment.paid_amount %></td>
      </tr>
    </tbody>
  </table>
  <div id="paymentDetail">
    <div>Paid By: <%= @payment.mode_of_pay %></div>
    <div>Amount Paid in Words: <i><%= @payment.paid_amount.to_words %> </i></div>
    <br>
    <br>
    <div class="detail">Generated by: <%= User.find_by(id: @payment.paid_by)&.name %></div>
    <div class="detail"><%= @payment.paid_at&.strftime("%d/%m/%Y %I:%M %p") %></div>
  </div>
</main>
