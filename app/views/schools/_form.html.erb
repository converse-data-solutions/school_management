<%= form_with(model: school, class: "contents") do |form| %>
  <% if school.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(school.errors.count, "error") %> prohibited this school from being saved:</h2>
      <ul>
        <% school.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="my-5">
    <%= form.label :school_name %>
    <%= form.text_field :school_name, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>
  <div class="my-5">
    <%= form.label :school_address1 %>
    <%= form.text_field :school_address1, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>
  <div class="my-5">
    <%= form.label :school_address2 %>
    <%= form.text_field :school_address2, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>
  <div class="my-5">
    <%= form.label :school_email %>
    <%= form.text_field :school_email, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>
  <div class="my-5">
    <%= form.label :school_phone %>
    <%= form.text_field :school_phone, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>
  <div class="my-5">
    <%= form.label :academic_year %>
    <%= form.select :academic_year, ['2023-2024', '2024-2025', '2025-2026', '2026-2027', '2028-2029'] %>
  </div>
  <div class="file-input-wrapper mt-3">
    <label class=" px-9 py-3 bg-white  text-Black border-2 rounded-lg">
      <span class=" text-base leading-normal">Browse</span>
      <%= form.file_field :image, class: "hidden", id: "single_file", accept: "image/*" %>
    </label>
  </div>
  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
